@{
    ViewBag.Title = "Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12" style="padding: 0 50px 0 50px; height:auto;">


    <div id="header" class="row">
        <div id="headerTitle" class="col-lg-2">
            The Titan
            <i class="fa fa-plus round" aria-hidden="true" style="font-size: 20px; "></i>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-sm-3 col-sm-offset-3 pull-right">
                    <div id="imaginary_container">
                        <div class="input-group stylish-input-group">
                            <input type="text" class="form-control" placeholder="Search">
                            <span class="input-group-addon">
                                <button type="submit">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-lg-12">
        <div class="projectInfo col-lg-4 pull-left">
            <i class="fa fa-pencil-square-o" aria-hidden="true">127</i>
            <i class="fa fa-users" aria-hidden="true">6</i>
        </div>
        <div class="AdvancedSearch pull-right">
            <a href="#">Advanced search</a>
        </div>
    </div>

    <div class="row Sort_Title_Pagination">
        <div class="field pull-left" id="SortBy">
            <span class="field">Sort by:</span>
        </div>
        <div class="dropdown pull-left">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Title <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                <li><a href="#">Project</a></li>
                <li><a href="#">Assignee</a></li>
                <li><a href="#">Status</a></li>
                <li><a href="#">Priority</a></li>
            </ul>
        </div>
        <div class=" pull-right">
            <span class="pull-left">
                1 ... 3 4
            </span>
        </div>
    </div>

    <div id="UniversalTable" class="marginFromMenu">

        @for (int i = 0; i < 5; i++)
        {
            <div class="TableRowInfo row">
                <div class="IconElement col-lg-1 padding0">
                    <img src="~/Content/Images/PriorityMinor.png" class="img-priority img-responsive">
                </div>
                <div class="ProjectInfo col-lg-5">
                    <div class="ProjectPrefix">
                        TDF-123
                        <span class="BugStatus ToDo">
                        To do
                    </span>
                    </div>
                    <div class="ElementText">
                        Font for password is different from other labels font on 'Login' screen
                    </div>
                </div>

                <div class="ProjectTitle col-lg-2">
                    The Titan
                </div>

                <div class="Dates col-lg-2">
                    <div class="Created">
                        Created: 10/10/16
                    </div>
                    <div class="Updated">
                        Created: 10/10/16
                    </div>
                </div>

                <div class="AssignedUser col-lg-2">
                    <div class="userInfo">
                        <img src="~/Content/images/orwell.jpeg" class="img-circle img-responsive " height="45" width="45" alt="userPhoto"/>
                    </div>
                    George<br/>
                    Orwell
                </div>
            </div>

        }

    </div>



    <div class="row Sort_Title_Pagination">
        <i class="fa fa-edit col-lg-2" aria-hidden="true" style="font-size: 18px;"> Tasks: 67</i>
        <div class=" pull-right">
            <span class="pull-left">
                1 ... 3 4
            </span>
        </div>
    </div>






</div>

