@{
    ViewBag.Title = "Users";
}
<div class="col-lg-12 general-container">
    <div id="header" class="row">
        <div id="headerTitle" class="col-lg-2">
            Users
            <i class="fa fa-plus round" aria-hidden="true"></i>
        </div>
        <div class="pull-right" id="Local-search">
            <div id="imaginary_container">
                <div class="input-group stylish-input-group">
                    <input type="text" class="form-control" placeholder="Search">
                    <span class="input-group-addon">
                        <button type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="row Sort_Title_Pagination">
        <div class="" id="SortBy">
            <span class="sticker-properties pull-right">Sort by: </span>
        </div>
        <div class="dropdown col-lg-1 pull-left">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Name <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                <li><a href="#">Name</a></li>
                <li><a href="#">Surname</a></li>
                <li><a href="#">Email</a></li>
                <li><a href="#">Role</a></li>
            </ul>
        </div>
        <div class="pull-right">
            <span class="pull-left">
                1 ... 3 4
            </span>
        </div>
    </div>
    <div class="row">
        @for (int i = 0; i < 5; i++)
        {
            <div class="col-lg-4 col-md-4">
                <i class="fa fa-times-circle" aria-hidden="true"></i>
                <div class="custom-sticker">
                    <div class="userInfo">
                        <img src="~/Content/Images/orwell.jpeg" class="img-circle" height="45" width="45" alt="userPhoto" />
                        <div id="FirstLastName">Ernest Hemingway</div>
                        <div id="email">ernest-miller-hemingway@email.com</div>
                    </div>
                    <div class="row">
                        <div class="pull-left projectInfo">
                            <span id="" style="border: 1px solid orange; padding: 5px;">Me</span>
                        </div>
                        <div class="projectInfo pull-right">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"> 127</i>
                            <i class="fa fa-th-list" aria-hidden="true"> 6</i>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>

    <div class="row Sort_Title_Pagination">
        <i class="fa fa-users col-lg-2" aria-hidden="true" style="font-size: 18px;"> Users: 34</i>
        <div class="pull-right">
            <span class="pull-left">
                1 ... 3 4
            </span>
        </div>
    </div>
</div>

<script>
    $(".element2").click(function () {
        alert("farafa");
        $(this).next(".fa-times-circle").toggle();
    });

    $(document).ready(function () {
        $(".dropdown").hover(
            function () {
                $('.dropdown-menu', this).not('.in .dropdown-menu').stop(true, true).slideDown("fast");
                $(this).toggleClass('open');
            },
            function () {
                $('.dropdown-menu', this).not('.in .dropdown-menu').stop(true, true).slideUp("fast");
                $(this).toggleClass('open');
            }
        );
    });
</script>
